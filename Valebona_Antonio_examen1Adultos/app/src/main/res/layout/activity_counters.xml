<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear"
    tools:context=".Counters">

    <EditText
        android:id="@+id/Increment2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Increment"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/Counter2res"
        app:layout_constraintStart_toStartOf="@+id/counter2"
        app:layout_constraintTop_toBottomOf="@+id/counter2" />

    <Button
        android:id="@+id/counter1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Counter 1"
        app:layout_constraintEnd_toStartOf="@id/Counter1res"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Counter1res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@id/counter1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/counter1"
        app:layout_constraintTop_toTopOf="@id/counter1" />

    <Button
        android:id="@+id/counter2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="Counter 2"
        app:layout_constraintEnd_toStartOf="@id/Counter2res"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter1" />

    <TextView
        android:id="@+id/Counter2res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/counter2"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/counter2"
        app:layout_constraintTop_toTopOf="@id/counter2" />

    <TextView
        android:id="@+id/globalcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Global"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/counter2"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/Increment1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Increment"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/Counter1res"
        app:layout_constraintStart_toStartOf="@+id/counter1"
        app:layout_constraintTop_toBottomOf="@+id/counter1" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/globalcounter"
        app:layout_constraintVertical_bias="0.147" />

</androidx.constraintlayout.widget.ConstraintLayout>